@page
@model ChangePasswordModel
@{
    ViewData["Title"] = @localizer["Change Password"];
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<div class="my-3 text-start">
    <a class="btn btn-danger text-white" asp-action="EditProfile" asp-controller="Profiles" asp-area="Customer">@localizer["Cancel"]</a>
</div>
<h3 class="text-center">@localizer["Change Password"]</h3>
<hr />
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row d-flex justify-content-center">
    <div class="col-md-6 col-lg-4 col-12">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="@localizer["Please enter your old password."]" />
                <label asp-for="Input.OldPassword" class="form-label">@localizer["OldPassword"]</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@localizer["Please enter your new password."]" />
                <label asp-for="Input.NewPassword" class="form-label">@localizer["NewPassword"]</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@localizer["Please confirm your new password."]" />
                <label asp-for="Input.ConfirmPassword" class="form-label">@localizer["ConfirmPassword"]</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@localizer["Update password"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

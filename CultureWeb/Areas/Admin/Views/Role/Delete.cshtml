@{
    ViewData["Title"] = @localizer["Role Delete"];
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div class="pt-title ">
        <p class="fs-6"><a asp-action="Index" class="fs-5 text-danger">@localizer["Role List"]</a> <i class="fa-solid fa-chevron-right"></i> @localizer["Role Delete"]</p>
    </div>

</div>

<form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
       
        <div class="form-group row">
            <div class="col-2">
                <label>@localizer["Role Name"]</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id" />
            <div class="col-5">
                <input id="name" readonly="readonly" name="name" required="required" value="@ViewBag.name" class="form-control" />
            </div>
            <div class="col-5">
                <a asp-action="Index" class="btn btn-dark">@localizer["Cancel"]</a>
                <input type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal" value="@localizer["Delete"]" />
            </div>
        </div>
    </div>
</form>
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">@localizer["Confirm Deletion"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@localizer["question"]</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" value="@ViewBag.id" name="id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">@localizer["Cancel"]</button>
                    <button type="submit" class="btn btn-dark">@localizer["Yes"]</button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,
                    },
                    PasswordHash: {
                        required: true,
                    }
                },
                messages: {
                    UserName: "Enter your email",
                    PasswordHash: "Enter your password"
                }

            });
        });
    </script>
}


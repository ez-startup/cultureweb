@model CultureWeb.Areas.Admin.Models.RoleUserVm
@{
    ViewData["Title"] = @localizer["Assign User's Role"];
}
<br />

<h1 class="h5 mb-4 text-danger">@localizer["Assign User's Role"] </h1>
<form asp-action="Assign" method="post" class="d-flex justify-content-center" enctype="multipart/form-data">
    <div class="p-4 rounded border col-8">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        
        <div class="form-group row">
            <div class=" d-flex justify-content-center">
                <label asp-for="UserId" class="mx-3">@localizer["User"]</label>
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control w-50" ​​ data-val-required="@localizer["The User field is required."]">
                    <option disabled selected>@localizer["Select User"]</option>
                </select>                
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class=" d-flex justify-content-center">
                <label asp-for="RoleId" class="mx-3">@localizer["Role"]</label>
                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control w-50" ​data-val-required="@localizer["The Role field is required."]" required>
                    <option disabled selected>@localizer["Select Role"]</option>
                </select>               
           </div>
            @*<span asp-validation-for="RoleId" class="text-danger"></span>*@
        </div>
        <div class="form-group d-flex justify-content-between">
            <a asp-action="UserRole" class="btn btn-danger">@localizer["Back"]</a>
            <input type="submit" class="btn btn-dark" value="@localizer["Assign"]" />
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@model CultureWeb.Models.ApplicationUser
@{
    ViewData["Title"] = @localizer["User create"];
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div class="pt-title ">
        <p class="fs-6"><a asp-action="Index" class="fs-5 text-danger">@localizer["User List"]</a> <i class="fa-solid fa-chevron-right"></i> @localizer["User create"]</p>
    </div>
</div>
<div class="row">
    <div class="col-12 d-flex justify-content-center px-lg-5 px-2">
        <form asp-action="Create" class="row" method="post" id="user-form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-6 ">
                <div class="row">
                    <div class="mt-3 col-lg-11 ">
                        <div class="upload__box">
                            <div class="upload__btn-box">
                                <label class="upload__btn btn w-100">
                                    <p>Upload images</p>
                                    <i class="fas fa-upload"></i>
                                    <input asp-for="ImageFile" type="file" asp accept="image/*" multiple="" data-max_length="20" class="upload__inputfile">
                                </label>

                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                            <div class="upload__img-wrap col-12">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">

                    <div class="form-group col-md-6 col-lg-6">
                        <label asp-for="FirstName" class="control-label">@localizer["First Name"]</label>
                        <input asp-for="FirstName" class="form-control" data-val-required="@localizer["First Name is required."]" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6 col-lg-6">
                        <label asp-for="LastName" class="control-label">@localizer["Last Name"]</label>
                        <input asp-for="LastName" class="form-control" data-val-required="@localizer["Last Name is required."]" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6 col-lg-6">
                        <label asp-for="Gender" class="control-label">@localizer["Gender"]</label>
                        <select asp-for="Gender" class="form-select mb-2" aria-label="Default select example">
                            <option selected readonly>Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6 col-lg-6">
                        <label asp-for="Phone" class="control-label">@localizer["Phone"]</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6 col-lg-6">
                        <label asp-for="UserName" class="control-label">@localizer["Email"]</label>
                        <input asp-for="UserName" class="form-control" data-val-required="@localizer["Email is required."]" ​​​​ aria-required="true" required />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6 col-lg-6">
                        <label asp-for="UserName" class="control-label">@localizer["Birth Of Date"]</label>
                        <input asp-for="BirthDate" type="date" class="form-control col-12 mb-4" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-12">
                        <label asp-for="Address" class="control-label">@localizer["Address"]</label>
                        <textarea asp-for="Address" cols="20" rows="5" class="form-control "></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div> 
                    <div class="mt-2 col-lg-12">
                        <label asp-for="PasswordHash" class="control-label">@localizer["Password"]</label>
                        <input asp-for="PasswordHash" class="form-control" ​ data-val-required="@localizer["Password is required."]" aria-required="true" required />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="form-group text-end mt-3">
                        <input type="submit" value="@localizer["Save"]" class="btn btn-dark" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Content Row -->

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,
                    },
                    PasswordHash: {
                        required: true,
                    }
                },
                messages: {
                    UserName: "Enter your email",
                    PasswordHash: "Enter your password"
                }

            });
        });
    </script>
}


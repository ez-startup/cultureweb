@model CultureWeb.Models.ApplicationUser
@{
    ViewData["Title"] = @localizer["User Delete"];
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div class="pt-title ">
        <p class="fs-6"><a asp-action="Index" class="fs-5 text-danger">@localizer["User List"]</a> <i class="fa-solid fa-chevron-right"></i> @localizer["User Delete"]</p>
    </div>
</div>

<!-- Content Row -->
<div class="row d-flex justify-content-center">
    <h4 class="text-center">@localizer["Do you want to delete this User"]?</h4>
    <div class="col-4  d-flex justify-content-center ">
       
        <form asp-action="Delete" class="row ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="mt-3 col-lg-12">
                <label asp-for="UserName" class="control-label">@localizer["Email"]</label>
                <input asp-for="UserName" readonly="readonly" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mt-3 col-lg-12">
                <label asp-for="FirstName" class="control-label">@localizer["First Name"]</label>
                <input asp-for="FirstName" readonly="readonly" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mt-3 col-lg-12">
                <label asp-for="LastName" class="control-label">@localizer["Last Name"]</label>
                <input asp-for="LastName" readonly="readonly" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class=" mt-3 d-flex justify-content-between">
                <div class="pt-options ">
                    <a asp-action="Index" class="btn btn-danger "> @localizer["Back"] </a>
                </div>
                <div class="">
                    <button type="submit" value="Create" class="btn btn-dark form-control float-sm-end px-4">@localizer["Delete"]</button>
                </div>

            </div>
        </form>


    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,
                    },
                    PasswordHash: {
                        required: true,
                    }
                },
                messages: {
                    UserName: "Enter your email",
                    PasswordHash: "Enter your password"
                }

            });
        });
    </script>
}


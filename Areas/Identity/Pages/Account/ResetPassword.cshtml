@page
@model ResetPasswordModel
@{
    ViewData["Title"] = @localizer["Reset password"];
}
@{
    Layout = "/Pages/Shared/_AuthLayout.cshtml";
}
 

<div class="container">
    <h1 class="text-center my-4">@localizer["Reset your password"]</h1>
    <hr />
    <div class="row mx-0 w-100 justify-content-center">
        <div class="col-12 col-sm-8 col-md-8 col-lg-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group mb-3">
                   
                    <span class="placeholder-text text-secondary">@localizer["Email"]</span>
                    <input asp-for="Input.Email" class="form-control google-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <small>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </small>
                </div>
                <div class="form-group mb-3">
                   
                    <span class="placeholder-text text-secondary">@localizer["Password"]</span>
                    <input asp-for="Input.Password" class="form-control google-input" autocomplete="new-password" aria-required="true" placeholder="@localizer["Please enter your password"]" />
                    <small>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </small>
                </div>
                <div class="form-group mb-3">
                   
                    <span class="placeholder-text text-secondary">@localizer["Confirm Password"]</span>
                    <input asp-for="Input.ConfirmPassword" class="form-control google-input" autocomplete="new-password" aria-required="true" placeholder="@localizer["Please confirm your password"]" />
                    <small>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </small>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary bg-dark" style="border: none;">@localizer["Reset"]</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

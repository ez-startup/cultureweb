<div class="container">
    <h1 class="text-center my-4">@localizer["Forgot your password"]?</h1>
    <h2 class="text-center">@localizer["Enter your email"].</h2>
    <hr />
    <div class="row mx-0 w-100 justify-content-center">
        <div class="col-12 col-sm-8 col-md-8 col-lg-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group mb-3">
                    <span class="placeholder-text text-secondary">@localizer["Email"]</span>
                    <input asp-for="Input.Email" class="form-control google-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />                 
                    <small>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </small>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-dark " style="border: none">@localizer["Reset Password"]</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

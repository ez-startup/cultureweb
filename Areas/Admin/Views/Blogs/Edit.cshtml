@model CultureWeb.Models.Blog

@{
    ViewData["Title"] = @localizer["Blog Edit"];
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <div class="pt-title">
        <p class="fs-6"><a asp-action="Index" class="fs-5 text-danger">@localizer["Blog List"]</a> <i class="fa-solid fa-chevron-right"></i> @localizer["Blog Edit"]</p>
    </div>

</div>

<div class="row">
    <div class="col-12 d-flex justify-content-center px-lg-5 px-2">
        <form asp-controller="Blogs" asp-action="Edit" method="post" class="row" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="old_image" value="@Model.Image" />
            <input type="hidden" asp-for="Id" />
            <div class="col-lg-6 ">
                <div class="row">
                    <div class="mt-3 col-lg-11 ">
                        <div class="upload__box">
                            <div class="upload__btn-box">
                                <label class="upload__btn btn w-100">
                                    <p>@localizer["Upload images"]</p>
                                    <i class="fas fa-upload"></i>
                                    <input asp-for="Image" type="file" asp accept="image/*" multiple="" data-max_length="20" class="upload__inputfile">
                                </label>

                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="upload__img-wrap col-12">
                                <img src="~/@Model.Image" asp-append-version="true" class="img-fluid" style="width: 180px; border-radius: 10px;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="mt-3 col-lg-12">
                        <label asp-for="Title" class="control-label">@localizer["Blog Title"]</label>
                        <input asp-for="Title" class="form-control" data-val-required="@localizer["Blog's Title is required."]" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mt-3 col-lg-12">
                        <label asp-for="Title_kh" class="control-label">@localizer["Blog Title in Khmer"]</label>
                        <input asp-for="Title_kh" class="form-control" data-val-required="@localizer["Blog's Title in Khmer is required."]" />
                        <span asp-validation-for="Title_kh" class="text-danger"></span>
                    </div>
                    <div class="mt-3 col-lg-12">
                        @if (CultureInfo.CurrentUICulture.Name == "en")
                        {
                            <label for="SubCategoryId">@localizer["SubCategory"]</label>
                            <select asp-for="SubCategoryId" asp-items="ViewBag.subCategoryId" class="form-control" data-val-required="@localizer["Blog's Sub Category is required."]">
                                <option disabled selected>@localizer["Select Sub Category"]</option>
                            </select>
                            @*<input asp-for="ProductTypeId" class="form-control"/>*@
                            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
                        }
                        else if (CultureInfo.CurrentUICulture.Name == "km")
                        {
                            <label for="SubCategoryId">@localizer["SubCategory"]</label>
                            <select asp-for="SubCategoryId" asp-items="ViewBag.subCategoryId_kh" class="form-control" data-val-required="@localizer["Blog's Sub Category is required."]">
                                <option disabled selected>@localizer["Select Sub Category"]</option>
                            </select>
                            @*<input asp-for="ProductTypeId" class="form-control"/>*@
                            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
                        }
                    </div>
                    <div class="mt-3 col-lg-12">
                        <label asp-for="Description" class="control-label">@localizer["Description"]</label>
                        <textarea asp-for="Description" cols="20" rows="5" class="form-control " data-val-required="@localizer["Blog's Description is required."]"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div> <div class="mt-3 col-lg-12">
                        <label asp-for="Description_kh" class="control-label">@localizer["Description in Khmer"]</label>
                        <textarea asp-for="Description_kh" cols="20" rows="5" class="form-control " data-val-required="@localizer["Blog's Description in Khmer is required."]"></textarea>
                        <span asp-validation-for="Description_kh" class="text-danger"></span>
                    </div>

                    <div class="mt-3 col-lg-12">
                        <label asp-for="BlogTitle" class="control-label">@localizer["Article Title"]</label>
                        <input asp-for="BlogTitle" class="form-control" />
                        <span asp-validation-for="BlogTitle" class="text-danger"></span>
                    </div>
                    <div class="mt-3 col-lg-12">
                        <label asp-for="BlogTitle_kh" class="control-label">@localizer["Article Title in Khmer"]</label>
                        <input asp-for="BlogTitle_kh" class="form-control" />
                        <span asp-validation-for="BlogTitle_kh" class="text-danger"></span>
                    </div>
                    <div class="mt-3 col-lg-12">
                        <label asp-for="BlogDesc" class="control-label">@localizer["Article Desc"]</label>
                        <textarea asp-for="BlogDesc" cols="20" rows="10" class="form-control"></textarea>
                        <span asp-validation-for="BlogDesc" class="text-danger"></span>
                    </div>
                    <div class="mt-3 col-lg-12">
                        <label asp-for="BlogDesc_kh" class="control-label">@localizer["Article Desc in Khmer"]</label>
                        <textarea asp-for="BlogDesc_kh" cols="20" rows="10" class="form-control"></textarea>
                        <span asp-validation-for="BlogDesc_kh" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class=" my-3 d-flex justify-content-between">
                <div class="pt-options ">
                    <a asp-action="Index" class="btn btn-danger mx-2"> @localizer["Back"]  </a>
                </div>
                <div class="">
                    <button type="submit" value="Create" class="btn btn-dark form-control float-sm-end px-4">@localizer["Update"] </button>
                </div>

            </div>
        </form>


    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

  @model CultureWeb.Models.Contact
@{
    ViewData["Title"] = @localizer["Contact Delete"];
}

<div>
    <div class="pt-title ">
        <p class="fs-6"><a asp-action="Index" class="fs-5 text-danger">@localizer["Contact List"]</a> <i class="fa-solid fa-chevron-right"></i> @localizer["Contact Delete"]</p>
    </div>
    <hr />
    <h3>@localizer[ "Are you sure you want to delete this"]?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @localizer[ "Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @localizer[ "Email"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @localizer[ "Subject"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @localizer[ "Message"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class="col-sm-2">
            @localizer[ "Contact Date"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-dark">@localizer[ "Back to List"]</a>
            <input type="submit" value="@localizer[ "Delete"]" class="btn btn-danger" />
        </div>
       
    </form>
</div>
